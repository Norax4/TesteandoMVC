@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @if (ViewBag.ShowMessage == true)
    {
        <h1 class="display-4 text-success">¡El servicio funciona correctamente!</h1>
    }
    else
    {
        <h1 class="display-4 text-danger">¡El servicio no está funcionando!</h1>
    }
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Número Aleatorio</h5>
                    <p class="card-text">Obtén tu número de la suerte</p>
                    <a href="/Home/NumeroAleatorio" class="btn btn-primary">Generar Número</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <p class="card-text">Inicia sesión en el sistema</p>
                    <a href="/Home/Login" class="btn btn-success">Iniciar Sesión</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Privacy</h5>
                    <p class="card-text">Información de privacidad</p>
                    <a href="/Home/Privacy" class="btn btn-info">Ver Privacy</a>
                </div>
            </div>
        </div>
    </div>
</div>
